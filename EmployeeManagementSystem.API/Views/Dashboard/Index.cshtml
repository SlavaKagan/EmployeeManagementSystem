@model EmployeeManagementSystem.Application.DTOs.DashboardViewModel
@using System.Text.Json

@{
    ViewData["Title"] = "Dashboard";
    var labels = Model.EmployeesByDepartment.Select(x => x.DepartmentName).ToList();
    var values = Model.EmployeesByDepartment.Select(x => x.Count).ToList();
}

<div class="row mb-3">
    <div class="col-md-8">
        <form method="get" class="d-flex gap-2">
            <input name="search" class="form-control" value="@Model.Search" placeholder="Search name or department" />
            <button class="btn btn-primary">Search</button>
            <a class="btn btn-outline-secondary" href="@Url.Action("Index", "Dashboard")">Clear</a>
        </form>
    </div>
</div>

<div class="row g-3">
    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="h6 text-muted mb-1">Total Employees</div>
                <div class="display-6">@Model.TotalEmployees</div>
            </div>
        </div>
    </div>

    <div class="col-md-9">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="h6 text-muted">Employees by Department</div>
                <div class="table-responsive">
                    <table class="table table-sm align-middle">
                        <thead>
                            <tr><th>Department</th><th class="text-end">Count</th></tr>
                        </thead>
                        <tbody>
                            @foreach (var d in Model.EmployeesByDepartment)
                            {
                                <tr>
                                    <td>@d.DepartmentName</td>
                                    <td class="text-end">@d.Count</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <canvas id="deptChart" height="120"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="row g-3 mt-1">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="h6 text-muted">Recent Hires (Last 30 Days)</div>
                @if (!Model.RecentHires.Any())
                {
                    <div class="text-muted">No recent hires.</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-sm">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Department</th>
                                    <th>Hire Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var r in Model.RecentHires)
                                {
                                    <tr>
                                        <td>@r.FullName</td>
                                        <td>@r.Email</td>
                                        <td>@r.DepartmentName</td>
                                        <td>@r.HireDate.ToShortDateString()</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Chart.js via CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        (function() {
            const ctx = document.getElementById('deptChart');
            if (!ctx) return;
            const data = {
                labels: @Html.Raw(JsonSerializer.Serialize(labels)),
                datasets: [{
                    label: 'Employees',
                    data: @Html.Raw(JsonSerializer.Serialize(values))
                }]
            };
            new Chart(ctx, {
                type: 'bar',
                data: data,
                options: {
                    responsive: true,
                    plugins: { legend: { display: false } },
                    scales: { y: { beginAtZero: true, ticks: { precision: 0 } } }
                }
            });
        })();
    </script>
}
