<dl class="row">
    <dt class="col-sm-3">Created At</dt>
    <dd class="col-sm-9">@Model.CreatedAt.ToLocalTime().ToString("g")</dd>

    <dt class="col-sm-3">Updated At</dt>
    <dd class="col-sm-9">
        @(Model.UpdatedAt.HasValue
                ? Model.UpdatedAt.Value.ToLocalTime().ToString("g")
                : "Never")
    </dd>
</dl>